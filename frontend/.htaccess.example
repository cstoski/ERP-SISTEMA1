RewriteEngine On
RewriteBase /

# Proxy reverso para API (ajuste conforme sua configuração)
# Opção 1: Se Python App está em subpasta /api
# RewriteRule ^api/(.*)$ http://127.0.0.1:8000/api/$1 [P,L]

# Opção 2: Se Python App está em subdomínio
# RewriteRule ^api/(.*)$ https://api.seu_dominio.com.br/$1 [P,L]

# Single Page Application - redirecionar tudo para index.html
# exceto arquivos e diretórios existentes
RewriteRule ^index\.html$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api
RewriteRule . /index.html [L]

# Segurança - proteger arquivos sensíveis
<FilesMatch "\.(env|git|gitignore|htaccess|htpasswd)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Compressão GZIP
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Cache do navegador para recursos estáticos
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Imagens
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # CSS e JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  
  # Fontes
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  
  # HTML - sem cache
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Headers de segurança
<IfModule mod_headers.c>
  # Prevenir clickjacking
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Prevenir XSS
  Header set X-XSS-Protection "1; mode=block"
  
  # Prevenir MIME sniffing
  Header set X-Content-Type-Options "nosniff"
  
  # Referrer policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  
  # CORS (ajustar conforme necessário)
  # Header set Access-Control-Allow-Origin "*"
</IfModule>

