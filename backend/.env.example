# ==============================================================================
# CONFIGURAÇÃO DE AMBIENTE - ERP SISTEMA
# ==============================================================================
# Copie este arquivo para .env e configure suas credenciais
# NUNCA commite o arquivo .env no git!

# ==============================================================================
# AMBIENTE
# ==============================================================================
ENVIRONMENT=development
# Valores possíveis: development, production, test

# ==============================================================================
# BANCO DE DADOS
# ==============================================================================

# PostgreSQL (Recomendado)
DATABASE_URL=postgresql+psycopg://postgres:SUA_SENHA@localhost:5432/erp_sistema

# ==============================================================================
# SEGURANÇA
# ==============================================================================

# IMPORTANTE: Gere uma chave com: python generate_secret_key.py
SECRET_KEY=cole_aqui_a_chave_gerada
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# ==============================================================================
# CORS
# ==============================================================================

ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ==============================================================================
# EMAIL (Opcional)
# ==============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASSWORD=sua_senha
SMTP_FROM_EMAIL=seu_email@gmail.com
SMTP_USE_TLS=true

# ==============================================================================
# FRONTEND
# ==============================================================================

FRONTEND_URL=http://localhost:5173
LOGO_PATH=./public/assets/images/illustrations/takt_menor.jpg

